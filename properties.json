{
    "env": {
        "name": "development",
        "path": "secrets.env",
        "debug": true
    },
    "logging": {
        "level": "INFO",
        "format": "[%(levelname)s]:\t\t%(asctime)s - %(name)s - %(message)s",
        "path": "logs",
        "max_file_size": 10485760,
        "backup_count": 5
    },
    "profiles": {
        "path": "assets/public/profiles",
        "default": "assets/public/profiles/default/default.jpeg",
        "size": 1280,
        "quality": 85,
        "supported_formats": ["JPEG", "PNG"]
    },
    "products": {
        "path": "assets/public/products",
        "default": "assets/public/products/default/default.jpeg",
        "size": 1280,
        "quality": 85,
        "supported_formats": ["JPEG", "PNG"],
        "max_file_size": 5242880
    },
    "shoes": {
        "path": "assets/public/products/shoes",
        "default": "assets/public/products/default/default.jpeg",
        "size": 1280,
        "quality": 85,
        "supported_formats": ["JPEG", "PNG"]
    },
    "session": {
        "timeout": 30,
        "secure": false,
        "httponly": true
    }
}
